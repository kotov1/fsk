- var page = "filters"

doctype html
html(lang="ru")

	include pug-modules/head

	body

		.wrapper


			// header
			include pug-modules/header
			// /.header

			
			.page
				.container

					h1 Фильтр на главной

					.filter
						.filter__row
							.filter__fields
								.filter__field.filter-field
									.filter-field__label Количество комнат
									.ui-checkbox-group
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-0(type="checkbox", name="filter_rooms_C")
											label.ui-checkbox__label(for="checkbox-rooms-0") С
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-1(type="checkbox", name="filter_rooms_1")
											label.ui-checkbox__label(for="checkbox-rooms-1") 1
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-2(type="checkbox", name="filter_rooms_2")
											label.ui-checkbox__label(for="checkbox-rooms-2") 2
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-3(type="checkbox", name="filter_rooms_3")
											label.ui-checkbox__label(for="checkbox-rooms-3") 3
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-4(type="checkbox", name="filter_rooms_4")
											label.ui-checkbox__label(for="checkbox-rooms-4") 4
										.ui-checkbox
											input.ui-checkbox__input#checkbox-rooms-5(type="checkbox", name="filter_rooms_5")
											label.ui-checkbox__label(for="checkbox-rooms-5") 5

								.filter__field.filter-field
									.filter-field__label Стоимость, млн/р.
									.ui-range
										.ui-range__col
											span от
											input.ui-range__val.ui-range__from(value="1.95")
										.ui-range__col
											span до
											input.ui-range__val.ui-range__to(value="12.8")
										.ui-range__slider.ui-range-cost

								.filter__field.filter-field
									.filter-field__label Площадь, м
										sup 2
									.ui-range
										.ui-range__col
											span от
											input.ui-range__val.ui-range__from(value="22") 
										.ui-range__col
											span до
											input.ui-range__val.ui-range__to(value="158") 
										.ui-range__slider.ui-range-size
								
								.filter__field.filter-field
									.filter-field__label Готовность до
									select.ui-select(name="select_period", data-placeholder="2021")
										option(value="2020") 2020
										option.active(value="2021") 2021
										option(value="2022") 2022
						
						.filter__row.filter__hidden
							.filter__fields
								.filter__field.filter-field
									.filter-field__label Площадь кухни, м
										sup 2
									.ui-range
										.ui-range__col
											span от
											input.ui-range__val.ui-range__from(value="12") 
										.ui-range__col
											span до
											input.ui-range__val.ui-range__to(value="46") 
										.ui-range__slider.ui-range-kitchen

								.filter__field.filter-field
									.filter-field__label Этаж
									.ui-range
										.ui-range__col
											span от
											input.ui-range__val.ui-range__from(value="1") 
										.ui-range__col
											span до
											input.ui-range__val.ui-range__to(value="26") 
										.ui-range__slider.ui-range-floor

								.filter__field.filter-field
									.filter-field__label Корпус
									select.ui-select(name="select_building", data-placeholder="2 корпус")
										option(value="1 корпус") 1 корпус
										option.active(value="2 корпус") 2 корпус
										option(value="3 корпус") 3 корпус

								.filter__field.filter-field-
									.filter-field__label Апартаменты
									.ui-toggle
										.ui-toggle__item
											input#apartment-yes.ui-toggle__input(type="radio", name="apartments", value="yes", checked)
											label.ui-toggle__label(for="apartment-yes") Отображать
										.ui-toggle__item
											input#apartment-no.ui-toggle__input(type="radio", name="apartments", value="no")
											label.ui-toggle__label(for="apartment-no") Скрыть

										

					
						.filter__row.filter__tech
							button.filter-additional(type="button") Дополнительные параметры
							button.filter-reset(type="button") Сбросить фильтр
							a.btn.btn--bg(href="#") Показать результаты
					// /.filter

					.results.results-geo
						.results-geo__label Показать 
							span.results-geo__result 2 объекта
						button.results-geo__btn(type="button")
							img.svg(src="img/icons/ic-dropdown-arrow.svg", alt="link", width="12", height="7")


						.map#map

					// /.results

					.results-empty По вашему запросу ничего не найдено :(



				// /.container

			// /.page



			// footer
			include pug-modules/footer
			// /.footer
			

		// /.wrapper

		


