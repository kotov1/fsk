											.ui-checkbox
												input.ui-checkbox__input#checkbox-rooms-0(type="checkbox", name="filter_rooms_C")
												label.ui-checkbox__label(for="checkbox-rooms-0") С
											.ui-checkbox
												input.ui-checkbox__input#checkbox-rooms-1(type="checkbox", name="filter_rooms_1")
												label.ui-checkbox__label(for="checkbox-rooms-1") 1
											.ui-checkbox
												input.ui-checkbox__input#checkbox-rooms-2(type="checkbox", name="filter_rooms_2")
												label.ui-checkbox__label(for="checkbox-rooms-2") 2
											.ui-checkbox
